  jwt: {
    secret: process.env.JWT_SECRET,
    expiresIn: '1h',
    algorithm: 'HS256',
  },
  rateLimit: {
    windowMs: 15 * 60 * 1000,
    max: 100,
  },
  cors: {
    origin: process.env.ALLOWED_ORIGINS?.split(',') || [],
    methods: ['GET', 'POST', 'PUT', 'DELETE'],
    credentials: true,
  },
