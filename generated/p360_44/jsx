import React, { useState } from 'react';
import axios from 'axios';

const MarketingPage = () => {
  const [name, setName] = useState('');
  const [email, setEmail] = useState('');

  const handleSubmit = async (e) => {
    e.preventDefault();

    try {
      const response = await axios.post('/api/leads', { name, email });
      console.log('Lead submitted successfully:', response.data);
      // Clear form fields
      setName('');
      setEmail('');
    } catch (error) {
      console.error('Error submitting lead:', error);
    }
  };

  return (
    <div className="marketing-page">
      <header>
        <h1>[Product/Service Name]</h1>
        <nav>
          {/* Add navigation menu items */}
        </nav>
      </header>

      <main>
        <section className="hero">
          <h2>Compelling Headline</h2>
          <p>Brief description highlighting the value proposition.</p>
          <button>Call to Action</button>
        </section>

        <section className="features">
          <h3>Key Features</h3>
          {/* Add feature highlights */}
        </section>

        <section className="testimonials">
          <h3>Testimonials</h3>
          {/* Add customer testimonials */}
        </section>

        <section className="lead-capture">
          <h3>Get Started</h3>
          <form onSubmit={handleSubmit}>
            <label htmlFor="name">Name:</label>
            <input
              type="text"
              id="name"
              value={name}
              onChange={(e) => setName(e.target.value)}
              required
            />

            <label htmlFor="email">Email:</label>
            <input
              type="email"
              id="email"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              required
            />

            <button type="submit">Submit</button>
          </form>
        </section>
      </main>

      <footer>
        {/* Add footer content */}
      </footer>
    </div>
  );
};

export default MarketingPage;
